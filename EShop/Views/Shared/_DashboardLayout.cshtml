<!DOCTYPE html>

<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <meta name="description" content="">
        <meta name="author" content="">

        <title>Eshop-Dashboard</title>

        <!-- Bootstrap core CSS -->
        <link href="~/externalContents/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" />

        <!-- Custom styles for this template -->
        <link href="~/externalContents/css/simple-sidebar.css" rel="stylesheet" />

    </head>

    <body>

        <div class="d-flex" id="wrapper">

            <!-- Sidebar -->
            <div class="bg-light border-right" id="sidebar-wrapper">
                <div class="sidebar-heading">Admin Panel</div>
                <div class="list-group list-group-flush">
                    <a asp-controller="Dashboard" asp-action="Index" class="list-group-item list-group-item-action bg-light">Dashboard</a>
                    <a asp-controller="ProductTypes" asp-action="Index" class="list-group-item list-group-item-action bg-light">Product Types</a>
                    <a asp-controller="SpecialTags" asp-action="Index" class="list-group-item list-group-item-action bg-light">Special Tags</a>
                    <a asp-controller="Products" asp-action="Index" class="list-group-item list-group-item-action bg-light">Products</a>
                </div>
            </div>

            <!-- Page Content -->
            <div id="page-content-wrapper">

                <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
                    <button class="btn btn-primary" id="menu-toggle" style="width:auto">Toggle Menu</button>

                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav ml-auto mt-2 mt-lg-0">
                            <li class="nav-item active">
                                <a class="nav-link btn btn-primary text-white" style="width:auto" asp-controller="Home" asp-action="Index">Application Home <span class="sr-only">(current)</span></a>
                            </li>
                        </ul>
                    </div>
                </nav>

                <div class="container-fluid">
                    @RenderBody()
                </div>
            </div>

        </div>

        <!-- Bootstrap core JavaScript -->
        <script src="~/externalContents/vendor/jquery/jquery.min.js"></script>
        <script src="~/externalContents/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

        <!-- Menu Toggle Script -->
        <script>
            $("#menu-toggle").click(function (e) {
                e.preventDefault();
                $("#wrapper").toggleClass("toggled");
            });
        </script>
        @*@RenderSection("Scripts", required: false)*@
    </body>

</html>
