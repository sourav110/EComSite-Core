@model IEnumerable<Product>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<style>
    .btn {
        width: 75px;
    }
</style>


<br />
<div class="row">
    <div class="col-md-6">
        <h2 class="text-info">All Products</h2>
    </div>
    <div class="col-md-6 text-right">
        <a asp-controller="Products" asp-action="Create" class="btn btn-info" style="width:auto">Create New Product</a>
    </div>
</div>

<div>
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Name</th>
                <th>Price</th>
                <th>Color</th>
                <th>Product Type</th>
                <th>Special Tag</th>
                <th>Available</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Price</td>
                    <td>@item.ProductColor</td>
                    <td>@item.ProductType.TypeName</td>
                    <td>@item.SpecialTag.TagName</td>
                    <td>@item.IsAvailable</td>
                    <td>
                        <form method="post" asp-controller="Products" asp-action="Delete" asp-route-id="@item.Id">
                            <a asp-controller="Products" asp-action="Details" asp-route-id="@item.Id" class="btn btn-success">Details</a>
                            <a asp-controller="Products" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>
                            <button type="submit" onclick="return confirm('Are you sure to delete this product type?')" class="btn btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

