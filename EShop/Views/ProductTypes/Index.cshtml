@model IEnumerable<ProductType>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

@*<h1>All Products</h1>
<hr />*@
<style>
    .btn{
        width:75px;
    }
</style>


<br />
<div class="row">
    <div class="col-md-6">
        <h2 class="text-info">All Product Types</h2>
    </div>
    <div class="col-md-6 text-right">
        <a asp-controller="ProductTypes" asp-action="Create" class="btn btn-info" style="width:auto">Create New Type</a>
    </div>
</div>

<div>
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Product Type</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.TypeName</td>
                        <td>
                            <form method="post" asp-controller="ProductTypes" asp-action="Delete" asp-route-id="@item.Id">
                                <a asp-controller="ProductTypes" asp-action="Details" asp-route-id="@item.Id" class="btn btn-success">Details</a>
                                <a asp-controller="ProductTypes" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>
                                <button type="submit" onclick="return confirm('Are you sure to delete this product type?')" class="btn btn-danger">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
        </tbody>
    </table>
</div>


